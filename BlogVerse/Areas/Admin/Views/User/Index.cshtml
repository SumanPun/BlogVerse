@model List<BlogVerse.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "Users";
}

<div class="container-fluid">
    <a class="btn btn-success" asp-action="Register" asp-controller="User">Add</a>
    <div class="card">
        <div class="card-header bg-primary">
            <h4 class="card-text text-white">List of Users</h4>
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover" id="myTable">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>UserName</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <td>
                                @item.FirstName
                            </td>
                            <td>
                                @item.LastName
                            </td>
                            <td>
                                @item.UserName
                            </td>
                            <td>
                                @item.Email
                            </td>
                            <td>
                                @item.Role
                            </td>
                            <td>
                                <a class="btn btn-warning" asp-action="ResetPassword" asp-controller="User" asp-route-id="@item.Id">Forget Password</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>